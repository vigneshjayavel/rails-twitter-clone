<table class="profile">
	<tr>
		<td class="main">
			<h2> 
				<%= image_tag(gravatar_image gravatar_for(@user))  %> 
				<%= h @user.name %>
			</h2>
		</td>
		<td class="sidebar round">
			<strong>Name</strong> <%= h @user.name %><br>
			<strong>URL</strong> <%= link_to user_path(@user), @user %>
		</td>
	</tr>
</table>